<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ub.pis2016.jbargaji11.appdivises.MainActivity">

    <TextView
        android:text="Dolars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:id="@+id/txtDolar"
        android:layout_alignBaseline="@+id/btnCanvi"
        android:layout_alignBottom="@+id/btnCanvi"
        android:layout_toRightOf="@+id/btnCanvi"
        android:layout_toEndOf="@+id/btnCanvi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Euros"
        android:layout_alignBaseline="@+id/btnCanvi"
        android:layout_alignBottom="@+id/btnCanvi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:id="@+id/txtEuro" />

    <Button
        android:text="--->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCanvi"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:id="@+id/entIntro"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/btnCanvi"
        android:layout_toRightOf="@+id/txtEuro"
        android:layout_toEndOf="@+id/txtEuro" />

    <TextView
        android:text="Resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResultat"
        android:layout_marginTop="119dp"
        android:layout_below="@+id/entIntro"
        android:layout_alignLeft="@+id/entIntro"
        android:layout_alignStart="@+id/entIntro" />

    <Button
        android:text="Transforma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="37dp"
        android:id="@+id/btnTrans"
        android:layout_below="@+id/entIntro"
        android:layout_alignLeft="@+id/btnCanvi"
        android:layout_alignStart="@+id/btnCanvi" />

    <TextView
        android:text="Percentatge de comissiÃ³:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/txtPercentatge"
        android:layout_below="@+id/txtTipusCanvi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/entTipusCanvi"
        android:layout_below="@+id/txtResultat"
        android:layout_alignRight="@+id/txtDolar"
        android:layout_alignEnd="@+id/txtDolar"
        android:layout_marginTop="59dp"
        android:layout_toRightOf="@+id/txtResultat"
        android:layout_toEndOf="@+id/txtResultat"
        android:text="0.00" />

    <TextView
        android:text="Tipus de canvi:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTipusCanvi"
        android:layout_alignBaseline="@+id/entTipusCanvi"
        android:layout_alignBottom="@+id/entTipusCanvi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/entPercentatge"
        android:layout_alignBaseline="@+id/txtPercentatge"
        android:layout_alignBottom="@+id/txtPercentatge"
        android:layout_alignRight="@+id/entTipusCanvi"
        android:layout_alignEnd="@+id/entTipusCanvi"
        android:layout_toRightOf="@+id/txtPercentatge"
        android:layout_toEndOf="@+id/txtPercentatge"
        android:text="0" />
</RelativeLayout>
